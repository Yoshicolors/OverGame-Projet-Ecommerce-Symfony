{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - OverGame{% endblock %}

{% block body %}
<div class="product-detail-container">
    <div class="breadcrumb">
        <a href="{{ path('app_product_index') }}">{{ 'nav.catalog'|trans }}</a>
        <span>â€º</span>
        <a href="{{ path('app_product_index', {category: product.category.id}) }}">{{ product.category.name }}</a>
        <span>â€º</span>
        <span>{{ product.name }}</span>
    </div>

    <div class="product-detail">
        <div class="product-gallery">
            {% if product.images|length > 0 %}
                <img src="{{ product.images[0].url }}" alt="{{ product.name }}" class="main-image">
            {% else %}
                <div class="no-image-large">ðŸŽ®</div>
            {% endif %}
        </div>

        <div class="product-main-info">
            <div class="product-category-badge">{{ product.category.name }}</div>
            <h1>{{ product.name }}</h1>
            
            <div class="product-status">
                <span class="badge badge-{{ product.status.value == 'disponible' ? 'success' : (product.status.value == 'en_rupture' ? 'danger' : 'warning') }}">
                    {{ ('product.' ~ product.status.value)|trans }}
                </span>
                {% if product.stock > 0 %}
                    <span class="stock-info">{{ product.stock }} {{ 'en stock'|trans }}</span>
                {% endif %}
            </div>

            <div class="product-price-section">
                <span class="product-price">{{ product.price|number_format(2, ',', ' ') }} â‚¬</span>
            </div>

            <div class="product-actions">
                {% if product.stock > 0 %}
                    <a href="{{ path('app_cart_add', {id: product.id}) }}" class="btn btn-primary btn-large">
                        ðŸ›’ {{ 'product.add_to_cart'|trans }}
                    </a>
                {% else %}
                    <button class="btn btn-disabled btn-large" disabled>
                        {{ 'product.out_of_stock'|trans }}
                    </button>
                {% endif %}
            </div>

            <div class="product-features">
                <h3>{{ 'CaractÃ©ristiques'|trans }}</h3>
                <ul>
                    <li><strong>{{ 'CatÃ©gorie'|trans }} :</strong> {{ product.category.name }}</li>
                    <li><strong>{{ 'DisponibilitÃ©'|trans }} :</strong> {{ ('product.' ~ product.status.value)|trans }}</li>
                    <li><strong>{{ 'Date de sortie'|trans }} :</strong> {{ product.createdAt|date('d/m/Y') }}</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="product-description-section">
        <h2>{{ 'Description'|trans }}</h2>
        <p>{{ product.description }}</p>
    </div>

    {% if relatedProducts|length > 0 %}
        <div class="related-products-section">
            <h2>{{ 'Produits similaires'|trans }}</h2>
            
            <div class="related-products-grid">
                {% for relatedProduct in relatedProducts %}
                    <div class="related-product-card">
                        <a href="{{ path('app_product_show', {id: relatedProduct.id}) }}">
                            <div class="related-product-image">
                                {% if relatedProduct.images|length > 0 %}
                                    <img src="{{ relatedProduct.images[0].url }}" alt="{{ relatedProduct.name }}">
                                {% else %}
                                    <div class="no-image">ðŸŽ®</div>
                                {% endif %}
                            </div>
                            <div class="related-product-info">
                                <h4>{{ relatedProduct.name }}</h4>
                                <p class="related-product-price">{{ relatedProduct.price|number_format(2, ',', ' ') }} â‚¬</p>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>

<style>
    .product-detail-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 30px;
        font-size: 14px;
        color: #718096;
    }

    .breadcrumb a {
        color: #667eea;
        text-decoration: none;
    }

    .breadcrumb a:hover {
        text-decoration: underline;
    }

    .product-detail {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        margin-bottom: 60px;
    }

    .product-gallery {
        background: white;
        border-radius: 16px;
        padding: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .main-image {
        width: 100%;
        height: auto;
        border-radius: 12px;
    }

    .no-image-large {
        width: 100%;
        aspect-ratio: 16/9;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 120px;
        border-radius: 12px;
    }

    .product-main-info {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .product-category-badge {
        display: inline-block;
        width: fit-content;
        padding: 6px 16px;
        background: #eef2ff;
        color: #667eea;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .product-main-info h1 {
        font-size: 36px;
        font-weight: 700;
        color: #1a202c;
        margin: 0;
        line-height: 1.2;
    }

    .product-status {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
    }

    .badge-success {
        background: #c6f6d5;
        color: #22543d;
    }

    .badge-warning {
        background: #feebc8;
        color: #7c2d12;
    }

    .badge-danger {
        background: #fed7d7;
        color: #742a2a;
    }

    .stock-info {
        color: #718096;
        font-size: 14px;
    }

    .product-price-section {
        padding: 20px 0;
        border-top: 2px solid #e2e8f0;
        border-bottom: 2px solid #e2e8f0;
    }

    .product-price {
        font-size: 42px;
        font-weight: 700;
        color: #667eea;
    }

    .product-actions {
        display: flex;
        gap: 15px;
    }

    .btn {
        padding: 16px 32px;
        border: none;
        border-radius: 10px;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
    }

    .btn-large {
        flex: 1;
    }

    .btn-disabled {
        background: #e2e8f0;
        color: #a0aec0;
        cursor: not-allowed;
    }

    .product-features {
        background: #f7fafc;
        padding: 24px;
        border-radius: 12px;
    }

    .product-features h3 {
        margin: 0 0 16px 0;
        font-size: 18px;
        font-weight: 700;
        color: #1a202c;
    }

    .product-features ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .product-features li {
        padding: 8px 0;
        color: #4a5568;
        font-size: 15px;
    }

    .product-description-section {
        background: white;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        margin-bottom: 60px;
    }

    .product-description-section h2 {
        margin: 0 0 20px 0;
        font-size: 28px;
        font-weight: 700;
        color: #1a202c;
    }

    .product-description-section p {
        margin: 0;
        font-size: 16px;
        line-height: 1.8;
        color: #4a5568;
    }

    .related-products-section h2 {
        margin: 0 0 30px 0;
        font-size: 28px;
        font-weight: 700;
        color: #1a202c;
    }

    .related-products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 24px;
    }

    .related-product-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: all 0.3s;
    }

    .related-product-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.15);
    }

    .related-product-card a {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .related-product-image {
        width: 100%;
        height: 180px;
        overflow: hidden;
    }

    .related-product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .related-product-image .no-image {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 64px;
    }

    .related-product-info {
        padding: 16px;
    }

    .related-product-info h4 {
        margin: 0 0 8px 0;
        font-size: 16px;
        font-weight: 600;
        color: #1a202c;
    }

    .related-product-price {
        margin: 0;
        font-size: 18px;
        font-weight: 700;
        color: #667eea;
    }

    @media (max-width: 968px) {
        .product-detail {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .product-main-info h1 {
            font-size: 28px;
        }

        .product-price {
            font-size: 32px;
        }

        .related-products-grid {
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        }
    }
</style>
{% endblock %}