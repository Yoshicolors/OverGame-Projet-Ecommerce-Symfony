{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.edit'|trans }} - {{ user.firstName }} {{ user.lastName }}{% endblock %}

{% block body %}
<div class="page-header">
    <h2>{{ 'admin.edit'|trans }} - {{ user.firstName }} {{ user.lastName }}</h2>
</div>

<div class="card">
    <form method="post">
        <div class="form-group">
            <label for="firstName">{{ 'auth.first_name'|trans }}</label>
            <input type="text" id="firstName" name="firstName" value="{{ user.firstName }}" required class="form-control">
        </div>

        <div class="form-group">
            <label for="lastName">{{ 'auth.last_name'|trans }}</label>
            <input type="text" id="lastName" name="lastName" value="{{ user.lastName }}" required class="form-control">
        </div>

        <div class="form-group">
            <label for="email">{{ 'auth.email'|trans }}</label>
            <input type="email" id="email" name="email" value="{{ user.email }}" required class="form-control">
        </div>

        <div class="form-group">
            <label for="password">{{ 'auth.password'|trans }} ({{ 'Laisser vide pour ne pas changer'|trans }})</label>
            <input type="password" id="password" name="password" class="form-control">
        </div>

        <div class="form-group">
            <label>RÃ´les</label>
            <div>
                <label style="display: block; margin-bottom: 8px;">
                    <input type="checkbox" name="roles[]" value="ROLE_USER" {{ 'ROLE_USER' in user.roles ? 'checked' : '' }}>
                    ROLE_USER
                </label>
                <label style="display: block;">
                    <input type="checkbox" name="roles[]" value="ROLE_ADMIN" {{ 'ROLE_ADMIN' in user.roles ? 'checked' : '' }}>
                    ROLE_ADMIN
                </label>
            </div>
        </div>

        <div style="margin-top: 20px;">
            <button type="submit" class="btn btn-primary">{{ 'admin.save'|trans }}</button>
            <a href="{{ path('app_admin_user_index') }}" class="btn btn-secondary">{{ 'admin.cancel'|trans }}</a>
        </div>
    </form>
</div>

<style>
    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #2d3748;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border: 2px solid #e2e8f0;
        border-radius: 6px;
        font-size: 14px;
        transition: border-color 0.3s;
    }

    .form-control:focus {
        outline: none;
        border-color: #667eea;
    }
</style>
{% endblock %}
