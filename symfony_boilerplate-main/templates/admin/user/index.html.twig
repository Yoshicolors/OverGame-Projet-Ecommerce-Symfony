{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin_nav.users'|trans }} - OverGame{% endblock %}

{% block body %}
<div class="page-header">
    <h2>{{ 'admin_nav.users'|trans }}</h2>
</div>

<div class="card">
    {% if users|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>{{ 'auth.first_name'|trans }}</th>
                    <th>{{ 'auth.last_name'|trans }}</th>
                    <th>{{ 'auth.email'|trans }}</th>
                    <th>RÃ´les</th>
                    <th>{{ 'admin.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td><strong>#{{ user.id }}</strong></td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge badge-{{ role == 'ROLE_ADMIN' ? 'danger' : 'info' }}">
                                    {{ role }}
                                </span>
                            {% endfor %}
                        </td>
                        <td>
                            <a href="{{ path('app_admin_user_show', {id: user.id}) }}" class="btn btn-secondary btn-sm">{{ 'common.view'|trans }}</a>
                            <a href="{{ path('app_admin_user_edit', {id: user.id}) }}" class="btn btn-primary btn-sm">{{ 'admin.edit'|trans }}</a>
                            {% if user.id != app.user.id %}
                                <form method="post" action="{{ path('app_admin_user_delete', {id: user.id}) }}" style="display: inline;" onsubmit="return confirm('{{ 'common.confirm_delete'|trans }}')">
                                    <button type="submit" class="btn btn-danger btn-sm">{{ 'admin.delete'|trans }}</button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p style="text-align: center; color: #718096; padding: 40px 0;">{{ 'common.no_data'|trans }}</p>
    {% endif %}
</div>

<style>
    .btn-sm {
        padding: 6px 12px;
        font-size: 13px;
        margin-right: 5px;
    }
    
    .btn-danger {
        background: #e53e3e;
        color: white;
    }
    
    .btn-danger:hover {
        background: #c53030;
    }
</style>
{% endblock %}
