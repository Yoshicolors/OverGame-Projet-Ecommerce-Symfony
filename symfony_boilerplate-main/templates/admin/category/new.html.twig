{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.create'|trans }} - {{ 'admin_nav.categories'|trans }}{% endblock %}

{% block body %}
<div class="page-header">
    <h2>{{ 'admin.create'|trans }} - {{ 'admin_nav.categories'|trans }}</h2>
</div>

<div class="card">
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div style="margin-top: 20px;">
            <button type="submit" class="btn btn-primary">{{ 'admin.save'|trans }}</button>
            <a href="{{ path('app_admin_category_index') }}" class="btn btn-secondary">{{ 'admin.cancel'|trans }}</a>
        </div>
    {{ form_end(form) }}
</div>

<style>
    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #2d3748;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border: 2px solid #e2e8f0;
        border-radius: 6px;
        font-size: 14px;
        transition: border-color 0.3s;
    }

    .form-control:focus {
        outline: none;
        border-color: #667eea;
    }
</style>
{% endblock %}
