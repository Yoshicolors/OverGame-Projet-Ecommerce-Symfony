{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin_nav.categories'|trans }} - OverGame{% endblock %}

{% block body %}
<div class="page-header" style="display: flex; justify-content: space-between; align-items: center;">
    <h2>{{ 'admin_nav.categories'|trans }}</h2>
    <a href="{{ path('app_admin_category_new') }}" class="btn btn-primary">{{ 'admin.add'|trans }}</a>
</div>

<div class="card">
    {% if categories|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Nombre de produits</th>
                    <th>{{ 'admin.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td><strong>#{{ category.id }}</strong></td>
                        <td>{{ category.name }}</td>
                        <td>{{ category.products|length }}</td>
                        <td>
                            <a href="{{ path('app_admin_category_edit', {id: category.id}) }}" class="btn btn-primary btn-sm">{{ 'admin.edit'|trans }}</a>
                            {% if category.products|length == 0 %}
                                <form method="post" action="{{ path('app_admin_category_delete', {id: category.id}) }}" style="display: inline;" onsubmit="return confirm('{{ 'common.confirm_delete'|trans }}')">
                                    <button type="submit" class="btn btn-danger btn-sm">{{ 'admin.delete'|trans }}</button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p style="text-align: center; color: #718096; padding: 40px 0;">{{ 'common.no_data'|trans }}</p>
    {% endif %}
</div>
{% endblock %}
