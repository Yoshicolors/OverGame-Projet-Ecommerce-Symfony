{% extends 'base.html.twig' %}

{% block title %}{{ 'order.my_orders'|trans }} - OverGame{% endblock %}

{% block body %}
<div class="orders-container">
    <div class="page-header">
        <h1>{{ 'order.my_orders'|trans }}</h1>
        <a href="{{ path('app_product_index') }}" class="btn btn-primary">
            {{ 'Continuer mes achats'|trans }}
        </a>
    </div>

    {% if orders|length > 0 %}
        <div class="orders-list">
            {% for order in orders %}
                <div class="order-card">
                    <div class="order-header">
                        <div>
                            <h3>{{ 'Commande'|trans }} #{{ order.reference }}</h3>
                            <p class="order-date">{{ order.createdAt|date('d/m/Y Ã  H:i') }}</p>
                        </div>
                        <span class="badge badge-{{ order.status.value == 'livree' ? 'success' : (order.status.value == 'annulee' ? 'danger' : (order.status.value == 'expediee' ? 'info' : 'warning')) }}">
                            {{ ('order.' ~ order.status.value)|trans }}
                        </span>
                    </div>

                    <div class="order-items">
                        {% for item in order.orderItems %}
                            <div class="order-item">
                                {% if item.product.images|length > 0 %}
                                    <img src="{{ item.product.images[0].url }}" alt="{{ item.product.name }}" class="item-thumbnail">
                                {% else %}
                                    <div class="item-thumbnail no-image">ðŸŽ®</div>
                                {% endif %}
                                <div class="item-info">
                                    <span class="item-name">{{ item.product.name }}</span>
                                    <span class="item-quantity">x{{ item.quantity }}</span>
                                </div>
                                <span class="item-price">{{ item.subtotal|number_format(2, ',', ' ') }} â‚¬</span>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="order-footer">
                        <div class="order-total">
                            <span>{{ 'order.total'|trans }} :</span>
                            <span class="total-amount">{{ order.total|number_format(2, ',', ' ') }} â‚¬</span>
                        </div>
                        <a href="{{ path('app_order_show', {id: order.id}) }}" class="btn btn-secondary">
                            {{ 'Voir les dÃ©tails'|trans }}
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-orders">
            <div class="empty-icon">ðŸ“¦</div>
            <h2>{{ 'Aucune commande'|trans }}</h2>
            <p>{{ 'Vous n\'avez pas encore passÃ© de commande'|trans }}</p>
            <a href="{{ path('app_product_index') }}" class="btn btn-primary">
                {{ 'DÃ©couvrir nos jeux'|trans }}
            </a>
        </div>
    {% endif %}
</div>

<style>
    .orders-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
    }

    .page-header h1 {
        font-size: 32px;
        font-weight: 700;
        color: #1a202c;
        margin: 0;
    }

    .btn {
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-secondary {
        background: #f7fafc;
        color: #2d3748;
        border: 2px solid #e2e8f0;
    }

    .btn-secondary:hover {
        background: #edf2f7;
    }

    .orders-list {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .order-card {
        background: white;
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 2px solid #e2e8f0;
    }

    .order-header h3 {
        margin: 0 0 8px 0;
        font-size: 20px;
        font-weight: 700;
        color: #1a202c;
    }

    .order-date {
        margin: 0;
        color: #718096;
        font-size: 14px;
    }

    .badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
    }

    .badge-success {
        background: #c6f6d5;
        color: #22543d;
    }

    .badge-warning {
        background: #feebc8;
        color: #7c2d12;
    }

    .badge-danger {
        background: #fed7d7;
        color: #742a2a;
    }

    .badge-info {
        background: #bee3f8;
        color: #2c5282;
    }

    .order-items {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 20px;
    }

    .order-item {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 12px;
        background: #f7fafc;
        border-radius: 8px;
    }

    .item-thumbnail {
        width: 60px;
        height: 60px;
        border-radius: 6px;
        object-fit: cover;
    }

    .item-thumbnail.no-image {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
    }

    .item-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .item-name {
        font-weight: 600;
        color: #1a202c;
    }

    .item-quantity {
        font-size: 14px;
        color: #718096;
    }

    .item-price {
        font-weight: 700;
        color: #667eea;
    }

    .order-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 20px;
        border-top: 2px solid #e2e8f0;
    }

    .order-total {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .order-total span:first-child {
        font-size: 14px;
        color: #718096;
    }

    .total-amount {
        font-size: 24px;
        font-weight: 700;
        color: #1a202c;
    }

    .empty-orders {
        text-align: center;
        padding: 80px 20px;
    }

    .empty-icon {
        font-size: 120px;
        margin-bottom: 20px;
        opacity: 0.3;
    }

    .empty-orders h2 {
        font-size: 28px;
        margin: 0 0 16px 0;
        color: #1a202c;
    }

    .empty-orders p {
        margin: 0 0 30px 0;
        color: #718096;
        font-size: 16px;
    }

    @media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: stretch;
            gap: 20px;
        }

        .order-header {
            flex-direction: column;
            gap: 15px;
        }

        .order-footer {
            flex-direction: column;
            gap: 20px;
            align-items: stretch;
        }

        .order-total {
            align-items: center;
        }
    }
</style>
{% endblock %}