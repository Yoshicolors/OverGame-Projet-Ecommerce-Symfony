{% extends 'base.html.twig' %}

{% block title %}{{ 'Commande'|trans }} #{{ order.reference }} - OverGame{% endblock %}

{% block body %}
<div class="order-detail-container">
    <div class="breadcrumb">
        <a href="{{ path('app_order_index') }}">{{ 'order.my_orders'|trans }}</a>
        <span>â€º</span>
        <span>{{ 'Commande'|trans }} #{{ order.reference }}</span>
    </div>

    <div class="order-detail-header">
        <div>
            <h1>{{ 'Commande'|trans }} #{{ order.reference }}</h1>
            <p class="order-date">{{ 'PassÃ©e le'|trans }} {{ order.createdAt|date('d/m/Y Ã  H:i') }}</p>
        </div>
        <span class="badge badge-large badge-{{ order.status.value == 'livree' ? 'success' : (order.status.value == 'annulee' ? 'danger' : (order.status.value == 'expediee' ? 'info' : 'warning')) }}">
            {{ ('order.' ~ order.status.value)|trans }}
        </span>
    </div>

    <div class="order-detail-content">
        <div class="order-items-section">
            <h2>{{ 'Articles commandÃ©s'|trans }}</h2>
            
            <div class="items-list">
                {% for item in order.orderItems %}
                    <div class="detail-item">
                        <div class="detail-item-image">
                            {% if item.product.images|length > 0 %}
                                <img src="{{ item.product.images[0].url }}" alt="{{ item.product.name }}">
                            {% else %}
                                <div class="no-image">ðŸŽ®</div>
                            {% endif %}
                        </div>
                        
                        <div class="detail-item-info">
                            <h3>{{ item.product.name }}</h3>
                            <p class="item-category">{{ item.product.category.name }}</p>
                            <p class="item-unit-price">{{ item.productPrice|number_format(2, ',', ' ') }} â‚¬ Ã— {{ item.quantity }}</p>
                        </div>
                        
                        <div class="detail-item-total">
                            <span>{{ item.subtotal|number_format(2, ',', ' ') }} â‚¬</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="order-summary-section">
            <div class="summary-card">
                <h2>{{ 'RÃ©capitulatif'|trans }}</h2>
                
                <div class="summary-line">
                    <span>{{ 'Sous-total'|trans }}</span>
                    <span>{{ order.total|number_format(2, ',', ' ') }} â‚¬</span>
                </div>
                
                <div class="summary-line">
                    <span>{{ 'Livraison'|trans }}</span>
                    <span>{{ 'Gratuite'|trans }}</span>
                </div>
                
                <div class="summary-total">
                    <span>{{ 'Total'|trans }}</span>
                    <span>{{ order.total|number_format(2, ',', ' ') }} â‚¬</span>
                </div>
            </div>

            <div class="info-card">
                <h3>{{ 'Informations de livraison'|trans }}</h3>
                <div class="info-content">
                    <p><strong>{{ order.user.firstName }} {{ order.user.lastName }}</strong></p>
                    <p>{{ order.user.email }}</p>
                </div>
            </div>

            <div class="timeline-card">
                <h3>{{ 'Suivi de commande'|trans }}</h3>
                <div class="timeline">
                    <div class="timeline-item {{ order.status.value == 'en_preparation' or order.status.value == 'expediee' or order.status.value == 'livree' ? 'completed' : '' }}">
                        <div class="timeline-dot"></div>
                        <div class="timeline-content">
                            <strong>{{ 'order.preparing'|trans }}</strong>
                            <small>{{ order.createdAt|date('d/m/Y H:i') }}</small>
                        </div>
                    </div>
                    
                    <div class="timeline-item {{ order.status.value == 'expediee' or order.status.value == 'livree' ? 'completed' : '' }}">
                        <div class="timeline-dot"></div>
                        <div class="timeline-content">
                            <strong>{{ 'order.shipped'|trans }}</strong>
                        </div>
                    </div>
                    
                    <div class="timeline-item {{ order.status.value == 'livree' ? 'completed' : '' }}">
                        <div class="timeline-dot"></div>
                        <div class="timeline-content">
                            <strong>{{ 'order.delivered'|trans }}</strong>
                        </div>
                    </div>
                </div>
            </div>

            <a href="{{ path('app_order_index') }}" class="btn btn-secondary btn-block">
                {{ 'Retour Ã  mes commandes'|trans }}
            </a>
        </div>
    </div>
</div>

<style>
    .order-detail-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 30px;
        font-size: 14px;
        color: #718096;
    }

    .breadcrumb a {
        color: #667eea;
        text-decoration: none;
    }

    .breadcrumb a:hover {
        text-decoration: underline;
    }

    .order-detail-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 40px;
    }

    .order-detail-header h1 {
        font-size: 32px;
        font-weight: 700;
        color: #1a202c;
        margin: 0 0 8px 0;
    }

    .order-date {
        margin: 0;
        color: #718096;
        font-size: 16px;
    }

    .badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
    }

    .badge-large {
        padding: 12px 24px;
        font-size: 16px;
    }

    .badge-success {
        background: #c6f6d5;
        color: #22543d;
    }

    .badge-warning {
        background: #feebc8;
        color: #7c2d12;
    }

    .badge-danger {
        background: #fed7d7;
        color: #742a2a;
    }

    .badge-info {
        background: #bee3f8;
        color: #2c5282;
    }

    .order-detail-content {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 30px;
    }

    .order-items-section {
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .order-items-section h2 {
        margin: 0 0 24px 0;
        font-size: 24px;
        font-weight: 700;
        color: #1a202c;
    }

    .items-list {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .detail-item {
        display: grid;
        grid-template-columns: 100px 1fr auto;
        gap: 20px;
        padding: 16px;
        background: #f7fafc;
        border-radius: 8px;
        align-items: center;
    }

    .detail-item-image {
        width: 100px;
        height: 100px;
        border-radius: 8px;
        overflow: hidden;
    }

    .detail-item-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .no-image {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 48px;
    }

    .detail-item-info h3 {
        margin: 0 0 8px 0;
        font-size: 18px;
        font-weight: 600;
        color: #1a202c;
    }

    .item-category {
        margin: 0 0 8px 0;
        color: #718096;
        font-size: 14px;
    }

    .item-unit-price {
        margin: 0;
        color: #4a5568;
        font-size: 14px;
    }

    .detail-item-total {
        font-size: 20px;
        font-weight: 700;
        color: #667eea;
    }

    .order-summary-section {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .summary-card,
    .info-card,
    .timeline-card {
        background: white;
        padding: 24px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .summary-card h2,
    .info-card h3,
    .timeline-card h3 {
        margin: 0 0 20px 0;
        font-size: 20px;
        font-weight: 700;
        color: #1a202c;
    }

    .summary-line {
        display: flex;
        justify-content: space-between;
        margin-bottom: 12px;
        font-size: 16px;
        color: #4a5568;
    }

    .summary-total {
        display: flex;
        justify-content: space-between;
        margin-top: 16px;
        padding-top: 16px;
        border-top: 2px solid #e2e8f0;
        font-size: 20px;
        font-weight: 700;
        color: #1a202c;
    }

    .info-content p {
        margin: 0 0 8px 0;
        color: #4a5568;
    }

    .timeline {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .timeline-item {
        display: flex;
        gap: 16px;
        position: relative;
    }

    .timeline-item::before {
        content: '';
        position: absolute;
        left: 11px;
        top: 30px;
        bottom: -20px;
        width: 2px;
        background: #e2e8f0;
    }

    .timeline-item:last-child::before {
        display: none;
    }

    .timeline-dot {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background: #e2e8f0;
        border: 3px solid white;
        box-shadow: 0 0 0 2px #e2e8f0;
        flex-shrink: 0;
    }

    .timeline-item.completed .timeline-dot {
        background: #48bb78;
        box-shadow: 0 0 0 2px #48bb78;
    }

    .timeline-content {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .timeline-content strong {
        color: #1a202c;
    }

    .timeline-content small {
        color: #718096;
        font-size: 12px;
    }

    .btn {
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }

    .btn-secondary {
        background: #f7fafc;
        color: #2d3748;
        border: 2px solid #e2e8f0;
    }

    .btn-secondary:hover {
        background: #edf2f7;
    }

    .btn-block {
        width: 100%;
        display: block;
    }

    @media (max-width: 968px) {
        .order-detail-content {
            grid-template-columns: 1fr;
        }

        .order-detail-header {
            flex-direction: column;
            gap: 20px;
        }

        .detail-item {
            grid-template-columns: 80px 1fr;
        }

        .detail-item-total {
            grid-column: 2;
            text-align: right;
        }
    }
</style>
{% endblock %}